<h1>Products</h1>
<div id="products">
  <% @products.each do |product| %>
    <%= link_to product, style:"background-image: none" do%>
      <div id="<%= dom_id product %>" class="card padding-large margin-bottom-small animate__animated animate__fadeIn">
      <%= render product %>
      <p class="text-secondary">See more..</p>
      <%= link_to "Edit this product", edit_product_path(product), { class:"text-secondary", style:"background-image: none" } %>
      <br/>
      <%= button_to "Destroy this product", product, method: :delete, class:"text-danger" %>
    </div>
  <% end %>
<% end %>
</div>
<%= link_to "New product", new_product_path %>
